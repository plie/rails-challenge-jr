<div class="mt-5 container">
  <div class="p-3 mb-2 bg-dark text-white">
    <h1>Secret Message</h1>
    <form>
      <div class="form-group">
        <label for="exampleMessage">Message</label>
        <input type="message" class="form-control" id="exampleMessage" aria-describedby="messageHelp" placeholder="Type your secret message here">
        <small id="emailHelp" class="form-text text-light">This is a secret messaging service. Your messages are automatically deleted once retrieved.</small>
      </div>
      <div class="form-group">
        <label for="exampleInputPassword">Password</label>
        <input type="password" class="form-control" id="exampleInputPassword" placeholder="Enter a password">
        <small id="emailHelp" class="form-text text-light">You must use this password to retrieve this message.</small>
      </div>
      <button type="submit" class="btn btn-success">Create</button>
    </form>
  </div>
</div>
