<div class="mt-5 container">
  <div class="p-3 mb-2 bg-dark text-white">
    <h1>Secret Message</h1>
    
    <%= form_for(@message) do |f| %>
      
      <div class="form-group">
        <%= f.label :message_body, "Message" %>
        <%= f.text_area :message_body, class: "form-control", rows: "10", placeholder: "Type your secret message here" %>
        <small class="form-text text-light">This is a secret messaging service. Your messages are automatically deleted once retrieved.</small>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password" %>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter a password" %>
        <small class="form-text text-light">Password CANNOT be blank. You must use this encrypted password to retrieve this message.</small>
      </div>

      <%= f.submit "Create", class: "btn btn-success" %>

    <% end %>
  </div>
</div>
  