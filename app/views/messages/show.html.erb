<div class="mt-5 container">
  <div class="p-3 mb-2 bg-dark text-white">
    <h1>Secret Message</h1>
    <h3>Here is your message.</h3>
    <%= form_for(@message) do |f| %>
      
      <div class="form-group">
        <%= f.label :message_body, "Message" %>
        <%= f.text_area :message_body, class: "form-control", rows: "10" %>
        <small class="form-text text-light">This is a secret messaging service. This message has been deleted automatically. Once you leave this page this message will no longer be available.</small>
      </div>
      
    <% end %>
  </div>
</div>